<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:id="@+id/hide"
            android:onClick="hide"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="hide the Statubar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/showForDrawable"
            android:onClick="showWithDrawable"
            app:layout_constraintBottom_toTopOf="@id/hide"
            android:text="show the statusBur with Drawable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <Button
            android:onClick="showWithColor"
            app:layout_constraintBottom_toTopOf="@id/showForDrawable"
            android:text="show the statusBar with Color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>